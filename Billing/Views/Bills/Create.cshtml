@model Customer
<form id="customerForm">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Make Bill</h2>
            <hr />
        </div>
        @* Other code here *@

        <div class="mb-3">
            <label asp-for="PhNo"></label>
            <input asp-for="PhNo" id="PhNoInput" class="form-control" />
            <span asp-validation-for="PhNo" class="text-danger"></span>
        </div>
    </div>
</form>

<button id="enterButton" class="btn btn-primary">Enter</button>
<a asp-controller="Bills" asp-action="Index" class="btn btn-outline-light">Back to list</a>

<script>
    document.getElementById("enterButton").addEventListener("click", function () {
        var phNo = document.getElementById("PhNoInput").value;
        window.location.href = "/Bills/Customer/" + encodeURIComponent(phNo);
    });
</script>
