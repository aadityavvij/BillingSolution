@model List<Invoice>
<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h1>Invoices</h1>
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="alert alert-success alert-dismissible" role="alert">
					<div>@TempData["SuccessMessage"]</div>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}
			@if (TempData["FailureMessage"] != null)
			{
				<div class="alert alert-danger alert-dismissible" role="alert">
					<div>@TempData["FailureMessage"]</div>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Bills" asp-action="Create" class="btn btn-light">
				<i class="bi bi-plus-circle"></i> New Bill
			</a>
		</div>
	</div>

	<table class="table" style="background-color: #141414; color: #dcdcdc;">
		<thead>
			<tr>
				<th>
					Invoice Id
				</th>
				<th>
					Customer Name
				</th>
				<th>
					Customer Phone
				</th>
				<th>
					Customer Email
				</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.InvoiceId
					</td>
					<td>
						@{
							string customerName;
							if (obj.Customer != null)
							{
								customerName = obj.Customer.Name;
							}
							else
							{
								customerName = "Unknown";
							}
						}
						@customerName
					</td>
					<td>
						@{
							long customerPh;
							if (obj.Customer != null)
							{
								customerPh = obj.Customer.PhNo;
							}
							else
							{
								customerPh = 8888888888;
							}
						}
						@customerPh
					</td>
					<td>
						@{
							string customerEmail;
							if (obj.Customer != null)
							{
								customerEmail = obj.Customer.email;
							}
							else
							{
								customerEmail = "Unknown";
							}
						}
						@customerEmail
					</td>
					<td>
						<div role="group" class="w-75 btn-group ">
							<a asp-controller="Bills" asp-action="Details" asp-route-Id="@obj.InvoiceId" class="btn btn-light">
								Products Purchased
							</a>

						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>